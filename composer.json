{
    "name": "cbcaio/image-attacher",
    "description": "Add uploaded images to models in an easy-to-use and fast approach. Process and save modified versions of images, like avatar, thumbnail, different sizes, you decide. Write images using flysystem.",
    "keywords": [
        "laravel","image","eloquent","attacher","flysystem","image-attacher","upload","thumbnail","avatar"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Caio C. Bolognani",
            "email": "caio.bolognani@gmail.com"
        }
    ],
    "require": {
        "illuminate/support": "~5",
        "illuminate/database": "~5",
        "graham-campbell/flysystem": "~3.3",
        "intervention/image": "~2.3"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "orchestra/testbench": "~3.1"
    },
    "autoload": {
        "psr-4": {
            "CbCaio\\ImgAttacher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CbCaio\\ImgAttacher\\Testing\\": "tests/"
        }
    }
}
